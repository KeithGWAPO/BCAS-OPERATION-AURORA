        <button class="btn btn-success mb-3 mt-3" data-bs-toggle="modal" data-bs-target="#addUserModal">
            <i class="fas fa-user-plus me-2"></i> Add New User
        </button>
        <!-- Wrap table with a scrollable container -->
        <div class="table-responsive">
